{
  "manifest_version": 2,
  "name": "Show The Image",
  "description": "Shows the largest image in the page or tries to find a link leading to a larger version",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
